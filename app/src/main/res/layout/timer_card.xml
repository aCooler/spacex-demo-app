<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/inter_semibold"
        android:foregroundTint="@color/real_white"
        android:foregroundTintMode="add"
        android:lineSpacingExtra="2.8sp"
        android:text="NEXT LAUNCH"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        tools:text="NEXT LAUNCH" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#fafafa"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_goneMarginTop="16dp"
        />

    <TextView
        android:id="@+id/day"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2.8sp"
        android:textAllCaps="true"
        android:textColor="#8c8e8f"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_under_timer"
        app:layout_constraintRight_toLeftOf="@id/hour"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Days"
        android:text="Days"
        />

    <TextView
        android:id="@+id/hour"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2.8sp"
        android:textAllCaps="true"
        android:textColor="#8c8e8f"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_under_timer"
        app:layout_constraintLeft_toRightOf="@id/day"
        app:layout_constraintRight_toLeftOf="@id/minute"
        tools:text="Hours"
        android:text="Hours" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2.8sp"
        android:textAllCaps="true"
        android:textColor="#8c8e8f"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_under_timer"
        app:layout_constraintLeft_toRightOf="@id/hour"
        app:layout_constraintRight_toLeftOf="@id/second"
        tools:text="Minutes"
        android:text="Minutes" />

    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2.8sp"
        android:textAllCaps="true"
        android:textColor="#8c8e8f"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/guideline_under_timer"
        app:layout_constraintLeft_toRightOf="@+id/minute"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Seconds"
        android:text="Seconds" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/day"
        app:layout_constraintLeft_toLeftOf="@id/day"
        app:layout_constraintRight_toRightOf="@id/day"
        tools:text="8"
        />

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/hour"
        app:layout_constraintLeft_toLeftOf="@id/hour"
        app:layout_constraintRight_toRightOf="@id/hour"
        tools:text="17"
        android:text="17" />

    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/minute"
        app:layout_constraintLeft_toLeftOf="@id/minute"
        app:layout_constraintRight_toRightOf="@id/minute"
        tools:text="29" />

    <TextView
        android:id="@+id/seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/second"
        app:layout_constraintLeft_toLeftOf="@id/second"
        app:layout_constraintRight_toRightOf="@id/second"
        tools:text="7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_under_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="466dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="268dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="127dp"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical|center_horizontal"
        android:tint="@color/white"

        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_under_timer" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_space_x_logo_1_1" />


</androidx.constraintlayout.widget.ConstraintLayout>
