<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_and_text_icon"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_and_text_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_and_text_text"
        app:srcCompat="@drawable/ic_calendar"
        android:contentDescription="@string/app_name"
        app:tint="@color/text_white" />

    <TextView
        android:id="@+id/icon_and_text_text"
        style="@style/card_date_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_and_text_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="16 Nov 2021 at 2:41 AM" />

</androidx.constraintlayout.widget.ConstraintLayout>